<!DOCTYPE html>
<html>
  <head>
    <title>ClimbingGear</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

      <% flash.each do |k, v| %>
       <div class="<%= k %>"><%= v %></div>
        <% end %>

      <%= navbar %>
    </header>
    <%= yield %>
  </body>
</html>
