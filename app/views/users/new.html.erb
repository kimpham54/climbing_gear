<h1>SIGNUP</h1>

<%= form_with model: @user, local: true do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>
  <br/>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>

  <%= f.label :email %>
  <%= f.email_field :email %>
  <br/>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br/>

  <%= f.submit 'Signup' %>


  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
    <% end %>
    <% end %>
    <!-- raise password errors -->

<% end %>